<%- include('../includes/header.ejs')%>
<title><%=title%></title>
  </head>
  <body>
    <%- include('../includes/navbar.ejs')%>
    <main>
        <div class="container py-2">
            <form action="/postLogin" method="POST">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">Email address</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"
                  value="<%
                  if(cookie.cookie_data){%>
                    <%=cookie.cookie_data.cookie_email%>
                  <%}%>">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">Password</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="pass"
                  value="<%
                  if(cookie.cookie_data){%>
                    <%=cookie.cookie_data.cookie_password%>
                  <%}%>">
                </div>
                <div class="form-check form-check-inline mb-3">
                  <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Remember Me" name="cookie">
                  <label class="form-check-label mb-1" for="inlineCheckbox2">Remember Me</label>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/forgetpassword/emailVerify" class="text-primary py-2">Forget Password</a>
                </div>
              </form>
        </div>
    </main>
    <%- include('../includes/footer.ejs')%>
    